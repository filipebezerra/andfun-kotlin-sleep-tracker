<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.SleepTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--
        https://medium.com/over-engineering/setting-up-a-material-components-theme-for-android-fbf7774da739#f986
        -->
        <!--
        The primary brand color of your app, used most predominantly in theming
        -->
        <item name="colorPrimary">@color/blue_700</item>
        <!--
        A lighter/darker variant of your primary brand color, used sparingly in theming
        -->
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <!--
        The color used for elements displayed on top of your primary colors (eg. Text and icons,
        often white or semi-transparent black depending on accessibility)
        -->
        <item name="colorOnPrimary">@color/white</item>

        <!--
        The secondary brand color of your app, used mostly as an accent for certain widgets that
        need to stand out
        -->
        <item name="colorSecondary">@color/yellow_500</item>
        <!--
        A lighter/darker variant of your secondary brand color, used sparingly in theming
        -->
        <item name="colorSecondaryVariant">@color/yellow_400</item>
        <!--
        The color used for elements displayed on top of your secondary colors
        -->
        <item name="colorOnSecondary">@color/white</item>

        <!--
        The color used for errors (often a shade of red)
        -->
        <item name="colorError">@color/red_600</item>
        <!--
        The color used for elements displayed on top of your error color
        -->
        <item name="colorOnError">@color/white</item>

        <!--
        The color used for surfaces (i.e. Material “sheets”)
        -->
        <item name="colorSurface">@color/blue_dark_primary</item>
        <!--
        The color used for elements displayed on top of your surface color
        -->
        <item name="colorOnSurface">@color/white</item>

        <!--
        The color behind all other screen content
        -->
        <item name="android:colorBackground">@color/blue_700</item>
        <!--
        The color used for elements displayed on top of your background color
        -->
        <item name="colorOnBackground">@color/white</item>

        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:fontFamily">@font/raleway_medium</item>

        <item name="android:textColor">@color/white</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.SleepTracker.BottomSheetDialog</item>

        <!--
        https://github.com/material-components/material-components-android/blob/master/docs/components/Menu.md#implementing-menu-theming
        -->
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.SleepTracker.Subtitle1</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.SleepTracker.Subtitle1</item>
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>

        <!--
        https://material.io/components/buttons/android#theming-buttons
        -->
        <item name="materialButtonStyle">@style/Widget.SleepTracker.Button</item>
    </style>

    <style name="ThemeOverlay.SleepTracker.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
    </style>

    <style name="TextAppearance.SleepTracker.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Widget.SleepTracker.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SleepTracker.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.SleepTracker.Button</item>
    </style>
    
    <style name="ThemeOverlay.SleepTracker.Button" parent="">
        <item name="colorPrimary">@color/yellow_400</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="TextAppearance.SleepTracker.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
